{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "paths": {
            "*": [
                "node_modules/*"
                //"src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}