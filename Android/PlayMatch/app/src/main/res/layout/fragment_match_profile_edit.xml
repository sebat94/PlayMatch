                        android:layout_width="0dp"
                        android:layout_height="146dp"
                        android:layout_weight=".33"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/idImageView9"
                            android:layout_width="match_parent"
                            android:layout_height="128dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/dotted" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/idFloatingActionButton9"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|bottom"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:src="@drawable/ic_add_grey_24dp"
                            android:translationX="-6dp"
                            android:translationY="-18dp"
                            app:backgroundTint="@color/red"
                            app:fabCustomSize="24dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- ********* -->
            <!-- INFO USER -->
            <!-- ********* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:orientation="vertical"
                android:paddingBottom="18dp">
                <!-- Acerca de mi -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:text="Selecciona una imágen para convertirla en tu foto de perfil"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="4dp"
                        android:text="Acerca de mi"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/idEditTextAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect"
                        android:ems="10"
                        android:hint="Sobre ti"
                        android:inputType="textPersonName"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="12dp"
                        android:text="" />

                </LinearLayout>
                <!-- Puesto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="4dp"
                        android:text="Puesto"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/idEditTextJob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_effect"
                        android:ems="10"
                        android:hint="Añadir puesto"
                        android:inputType="textPersonName"
                        android:paddingStart="18dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="18dp"
                        android:paddingBottom="12dp"
                        android:text="" />

                </LinearLayout>
                <!-- Empresa -->
